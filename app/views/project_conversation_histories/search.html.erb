<div class="container mt-5">
  <h1 class="text-center">Search Results</h1>

  <!-- Search Query -->
  <% if @query.present? %>
    <p class="text-center">Results for '<strong><%= @query %></strong>'</p>
  <% end %>

  <% if @project_conversation_histories.any? %>
    <div class="row">
      <% @project_conversation_histories.each do |project_conversation_history| %>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to project_conversation_history.title, project_conversation_history_path(project_conversation_history), class: 'stretched-link' %>
              </h5>
              <p class="card-text">Status: <%= project_conversation_history.project_status.capitalize %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-warning text-center">
      No results found for '<%= @query %>'
    </div>
  <% end %>
</div>

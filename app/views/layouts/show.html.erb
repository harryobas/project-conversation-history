<div class="container mt-4">
    <h1 class="display-4"><%= @project_conversation_history.title %></h1>
  
    <div class="mt-3">
      <h3 class="h5">Project Status</h3>
      <p class="text-muted"><%= @project_conversation_history.project_status %></p>
    </div>
  
    <div class="mt-4">
      <h3 class="h5">Comments</h3>
      <% if @project_conversation_history.comments.any? %>
        <% @project_conversation_history.comments.each do |comment| %>
          <div class="card mb-2">
            <div class="card-body">
              <p class="card-text"><%= comment.body %></p>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-muted">No comments yet.</p>
      <% end %>
    </div>
  
    <div class="mt-4">
      <%= link_to 'Update Project Status', edit_project_conversation_history_path(@project_conversation_history), class: "btn btn-primary" %> 
      <%= link_to 'Add Comment', new_comment_path(project_conversation_history_id: @project_conversation_history.id), class: "btn btn-secondary" %>
    </div>
  </div>